pipeline {
    agent any

    stages {
        stage('Checkout') {
            steps {
                
                checkout scm
            }
        }
        
        stage('Build') {
            steps {
                
                bat 'python -m pip install -r requirements.txt'
                
                
                bat 'python manage.py migrate'
                
               
                bat 'python manage.py collectstatic --no-input'
            }
        }
        
        stage('Run Tests') {
            environment {
               
                PATH = "C:\\Python\\Scripts;C:\\Python"
            }
            steps {
                
                bat 'python manage.py test'
            }
        }
    }
}
