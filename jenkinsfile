pipeline {
    agent any
    stages {
        stage('Checkout') {
            steps {
                checkout scm
            }
        }
        stage('Build') {
            steps {
                script {
                    if (isUnix()) {
                        sh 'make build'
                    } else {
                        bat 'make build'
                    }
                }
            }
        }
    }
}
