pipeline {
    agent any
    stages {
        stage('Checkout') {
            steps {
                checkout scm
            }
        }
        stage('Build') {
            steps {
                sh 'make build'
            }
        }

    }
    post {
        success {
            slackSend channel: '#jenkins', color: 'good', message: "Build successful!"
        }
        failure {
            slackSend channel: '#jenkins', color: 'danger', message: "Build failed!"
        }
    }
}
